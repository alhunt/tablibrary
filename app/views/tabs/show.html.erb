<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">Tab Library</div>
			<div class="panel panel-body">
				<ul class="list-unstyled">
					<% @tabs.each do |tab| %>
						<li><%= link_to tab.artist + " - " + tab.title, tab %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading">
				<%= @tab.artist %>
				<%= @tab.title %>
				<%= link_to 'Edit', edit_tab_path(@tab), class: "btn btn-default btn-sm" %>
				<%= link_to 'Back', tabs_path %>
				<%= link_to 'Play', '#', id: "playButton", class: "btn btn-default btn-sm" %>
			</div>
			<div class="panel-body">
				<p class="tab">	
					<%= @tab.tab_content.gsub(/\n/, '<br/>').html_safe %>
				</p>
			</div>
		</div>
		<nav class="navbar navbar-inverse navbar-fixed-bottom">
			<div class="container">
				<li><%= link_to 'Play', '#', class: "btn btn-default btn-sm playButton" %></li>
				<li><%= link_to 'Pause', '#', class: "btn btn-default btn-sm pauseButton" %></li>
			</div>
		</nav>
	</div>
</div>
